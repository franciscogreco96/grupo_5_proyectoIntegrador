

    <!-- head -->
    <%- include ('partials/head', {tituloWeb:'Suquia Home',css: 'index.css'});%>



<body>

<!-- header -->

<%- include('partials/header') %>

    <main>
        <div class="div-background-imagen">
            <div>
                <img src="/img/portada/mesas3.jpeg" alt="mesa neolith negro marquina + sillas">
                <h1><a>MESAS</a></h1>
            </div>
        </div>
        <div class="div-background-imagen" id="sillas-y-sillones-margin">
            <div>
                <img src="/img/portada/sillas-y.sillones.jpg" alt="mesa neolith negro marquina + sillas">
                <h1 id="sillas-y-sillones-h1"><a>SILLAS Y SILLONES</a></h1>
            </div>
        </div>
        <div class="div-background-imagen">
            <div>
                <img src="/img/portada/home-decor2.jpeg" alt="mesa neolith negro marquina + sillas">
                <h1 id="home-decor"><a>HOME DECOR</a></h1>
            </div>
        </div>
        <div class="div-background-imagen">
            <div>
                <img src="/img/portada/muebles.jpg" alt="mesa neolith negro marquina + sillas">
                <h1 id="muebles"><a>MUEBLES</a></h1>
            </div>
        </div>
        <div class="div-background-imagen">
            <div>
                <img src="/img/portada/ceramica-y-marmol.jpg" alt="mesa neolith negro marquina + sillas">
                <h1 id="ceramica-y-marmol"><a>CER√ÅMICA Y MARMOL</a></h1>
            </div>
        </div>
        <h1 id="refleja-tu-estilo">REFLEJA TU ESTILO</h1>
        <hr id="linea-refleja-tu-estilo">
        <section class="flex-articulos" class="padding-articulos">
            
        <% products.forEach( product=> {
            let precioFinal = (product.precio * ((100 - product.descuento) /100)).toFixed(0)
            %>
            <article>
              <a href="/product/productDetail/<%= product.id%>">
              <img src="<%= product.imagen  %>" alt="mesa neolith beton">
              <h2>
                <%= product.nombre%>
              </h2>
              <p>
                <%= product.descripcion %>
              </p>
              <p>
                $<%= precioFinal %>
              </p>
              <p>
                <%= product.descuento %>% off !
              </p>
              <i class="fas fa-eye"></i>
            </article>
             </a>

            <% }); %>
        </section>

      
        <form action="/product" method="get" id="mostrar-todos-los-productos" class="mostrar-todos-los-productos">
            <button type="submit" form="mostrar-todos-los-productos">VER TODOS LOS PRODUCTOS</button>
        </form>
    </main>

    <!-- footer -->

    <%- include('partials/footer') %>

</body>

</html>