
<!-- head -->

<%- include ('../partials/head', {tituloWeb:'Pofile | Suquia Home',css: 'profile.css'}); %>


<body>

    <!-- header -->

   <%- include('../partials/header') %>


    <main>
        
        <h1 class="nombre">Hola  <%=user.first_name%> !</h1>

        <div class="tarjetaPerfil">  
            <h2>Nombre de usuario: <%=user.first_name%> </h2>
            <h2>Email: <%=user.email%> </h2>
            <h2>
                <% if (user.categoria_id==1) { %>
                    Categoria de Perfil: Administrador
                <% }  else {%>
                    Categoria de Perfil: Usuario
                    
                    
                    <% }%>
            
            </h2>

            <div class="imagenPerfil">
                <img src="/img/avatars/<%=user.imagen%>" alt="imagenPerfil">
            </div>
         </div> 
         <div class="botones">
         <button class="logout"> <a href="/user/logout">LOGOUT</a></button>
         <button class="logout"> <a href="/user/edit/<%=user.id%>">EDITAR</a></button>
        </div>
    </main>

<!-- footer -->

<%- include('../partials/footer') %>   

</body>
</html>